<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_view_01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="진단명"
        android:textSize="20dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintEnd_toStartOf="@id/item_edit_01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />
    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/item_view_01"
        app:layout_constraintBottom_toBottomOf="@id/item_view_01"
        android:layout_marginRight="10dp"
        android:src="@drawable/heart"/>

    <EditText
        android:id="@+id/item_edit_01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_view_01"
        app:layout_constraintTop_toTopOf="@id/item_view_01"
        app:layout_constraintBottom_toBottomOf="@id/item_view_01" />

    <TextView
        android:id="@+id/item_view_02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="증세"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_view_01"
        app:layout_constraintStart_toStartOf="@id/item_view_01"
        app:layout_constraintEnd_toEndOf="@id/item_view_01"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/item_edit_02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/item_edit_01"
        app:layout_constraintTop_toBottomOf="@id/item_view_01"
        app:layout_constraintEnd_toEndOf="@id/item_edit_01"
        />

    <TextView
        android:id="@+id/item_view_03"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="주의할 점"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_view_02"
        app:layout_constraintStart_toStartOf="@id/item_view_01"
        app:layout_constraintEnd_toEndOf="@id/item_view_01"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/item_edit_03"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/item_edit_01"
        app:layout_constraintTop_toBottomOf="@id/item_view_02"
        app:layout_constraintEnd_toEndOf="@id/item_edit_01" />

    <TextView
        android:id="@+id/item_view_04"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_view_03"
        app:layout_constraintStart_toStartOf="@id/item_view_01"
        app:layout_constraintEnd_toEndOf="@id/item_view_01"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/item_edit_04"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/item_edit_01"
        app:layout_constraintTop_toBottomOf="@id/item_view_03"
        app:layout_constraintEnd_toEndOf="@id/item_edit_01" />

    <TextView
        android:id="@+id/item_view_05"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_view_04"
        app:layout_constraintStart_toStartOf="@id/item_view_01"
        app:layout_constraintEnd_toEndOf="@id/item_view_01"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/item_edit_05"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/item_edit_01"
        app:layout_constraintTop_toBottomOf="@id/item_view_04"
        app:layout_constraintEnd_toEndOf="@id/item_edit_01" />

</androidx.constraintlayout.widget.ConstraintLayout>